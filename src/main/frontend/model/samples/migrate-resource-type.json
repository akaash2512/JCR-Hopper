			}
		},
		{
			"type": "nodeQuery",
			"query": "SELECT * FROM [nt:unstructured] AS page WHERE [cq:template] = \"${sourceTemplate}\"",
			"queryType": "JCR-SQL2",
			"hops": [
				{
					"type": "setProperty",
